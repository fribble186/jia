/* pages/homepage/homepage.wxss */
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}
.version{
  position: fixed;
  width:100%;
  height:100%;
  background: #f4d7b9;
  z-index: 10;
}

.menuName{
  margin-top:35rpx;
  margin-left:35rpx;
  margin-bottom:35rpx;
  font-size: 80rpx;
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-weight: 900;
}

.dishInMenu{
  border: 1rpx black solid;
  margin-left:7%;
  width:90%;
  height:1000rpx;
  background: #fdffe2;
}

.dish:nth-child(2n){
  margin-left:30rpx;
  width:650rpx;
  display: flex;
  flex-direction: row-reverse;
  height:80rpx;
  border: 1rpx black solid;
  margin-top: 50rpx;
  border-radius: 20rpx;
  border-top-right-radius:0rpx;
  border-bottom-right-radius:0rpx;
  background: #d8f9cf;
}
.dish:nth-child(2n+1){
  margin-right:30rpx;
  width:650rpx;
  display: flex;
  flex-direction: row-reverse;
  height:80rpx;
  border: 1rpx black solid;
  margin-top: 50rpx;
  border-radius: 20rpx;
  border-top-left-radius:0rpx;
  border-bottom-left-radius:0rpx;
}

.nodish{
  font-size:35rpx;
  font-weight: 900;
  margin-top:420rpx;
  width:550rpx;
  border:1rpx solid black;
  margin-left:50rpx;
}

.name:nth-child(2n){
  font-size: 50rpx;
  margin-left: 35rpx;
  margin-right:100rpx;
  text-align: center;
}
.name:nth-child(2n+1){
  font-size: 50rpx;
  margin-left: 20rpx;
  margin-right:100rpx;
  text-align: center;
}
.time:nth-child(2n){
  font-size:25rpx;
  margin-top:30rpx;
  margin-right: 20rpx;
}
.time:nth-child(2n+1){
  font-size:25rpx;
  margin-top:30rpx;
  margin-right: 20rpx;
}
.type:nth-child(2n){
  font-size:25rpx;
  margin-top:30rpx;
}
.type:nth-child(2n+1){
  font-size:25rpx;
  margin-top:30rpx;
}
.deleteOne:nth-child(2n){
  margin-right:20rpx;
  width:50rpx;
  height:50rpx;
  margin-top:20rpx;
  margin-left:20rpx;
}
.deleteOne:nth-child(2n+1){
  margin-right:20rpx;
  width:50rpx;
  height:50rpx;
  margin-top:20rpx;
  margin-left:20rpx;
}

.setting{
  position: absolute;
  right:-20rpx;
  bottom:10rpx;
  width:200rpx;
  height:100rpx;
}

.dice{
  position: absolute;
  bottom:10rpx;
  left:320rpx;
  width:100rpx;
  height:100rpx;
}

.choices{
  width:100%;
  height:100%;
  position: absolute;
  top:0;
  left:0;
  background-color: black;
  opacity: 0.7;
}
.rolldish{
  position: absolute;
  top:900rpx;
  left:150rpx;
  width:200rpx;
  height:200rpx;
  border-radius:200rpx;
  line-height: 200rpx;
  text-align: center;
  background-color: #f1cee6;
  z-index:3;
  font-weight: 700;
  transform: translate(100rpx,150rpx);  
  transition: all 0.5s ease-out;  
}
.rollmenu{
  position: absolute;
  top:900rpx;
  left:420rpx;
  width:200rpx;
  height:200rpx;
  border-radius:200rpx;
  line-height: 200rpx;
  text-align: center;
  background-color: #d8f9cf;
  opacity: 1;
  font-weight: 700;
  transform: translate(-100rpx,150rpx);  
  transition: all 0.5s ease-out;  
}

.login{
  background-color: rgba(0, 0, 0, 0.8);
  width:100%;
  height:100%;
  position: absolute;
  left:0;
  top:0;
}

.userAvatar{
  overflow:hidden;
  width:200rpx;
  height:200rpx;
  border-radius:300rpx;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.3);
  position: absolute;
  left:280rpx;
  top:300rpx;
}

.userName{
  font-size:35rpx;
  font-weight:500;
  color: white;
  position: absolute;
  top:600rpx;
  left:260rpx;
}

.login-btn{
  font-size: 32rpx;
  line-height: 100rpx;
  width:300rpx;
  height:100rpx;
  border-radius:200rpx;
  position: absolute;
  top:800rpx;
  left:230rpx;
}

.all{
  width:80%;
  position: fixed;
  top:200rpx;
  left:80rpx;
  z-index:10;
  color: white;
}

.one{
  z-index:10;
  color: balck;
}

.yes{
  position: fixed;
  bottom:350rpx;
  left:220rpx;
  width:100rpx;
  height:100rpx;
}

.no{
  position: fixed;
  bottom:350rpx;
  left:450rpx;
  width:100rpx;
  height:100rpx;
}

.roll{
  position: fixed;
  top:390rpx;
  width:100%;
  height:200rpx;
  background:#fdffe2;
  text-align: center;
  line-height: 200rpx;
  font-size: 50rpx;
  font-weight: 800;
  transform: scaleY(0.1);  
  transition: all 0.5s ease-out;  
}
.rolles{
  color: black;
  width:100%;
  height:100rpx;
  background:#fdffe2;
  text-align: center;
  font-size: 50rpx;
  font-weight: 800;
    transform: scaleY(0.1);  
  transition: all 0.5s ease-out;  
}
.rolles:nth-child(2n+1){
  color: black;
  width:100%;
  height:100rpx;
  background:#d8f9cf;
  text-align: center;
  font-size: 50rpx;
  font-weight: 800;
    transform: scaleY(0.1);  
  transition: all 0.5s ease-out;  
}